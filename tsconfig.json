{
  "compilerOptions": {
    "allowJs": true,
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": false,
    "lib": [
      "esnext", "dom"
    ],
    "outDir": "build/cloud"
  },
  "include": [
    "src/cloud/**/*.ts",
    "src/cloud/**/*.js"
  ]
}